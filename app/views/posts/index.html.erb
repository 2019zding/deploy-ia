<p id="notice"><%= notice %></p>

<h1>Middle School Featured Contents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Brief Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <!-- prospective students will be able to view content, however
          they will not be able to edit or destroy content -->
        <td><%= link_to 'Show', post %></td>
        <!-- if statement for if user is signed in and sessions is running,
          only these signed in users will be able to have the ability 
          to edit or destroy content -->
        <% if current_user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
