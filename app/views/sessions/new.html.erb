	<!-- everything is inside a div class so that the page will be modeled in a certain way-->
	<div class="row" style="padding-top:0%;">
	<div class="col"></div>
	<div class="col-md-4">
		<!-- title -->
	<h1>Please Sign In!</h1>
	</div> 
</div>
	<!-- fields for inputting user information when logging in -->
	<%= form_tag sessions_path do %>
	<%= text_field_tag :userid, nil, placeholder: 'Input User ID' %>
	<%= password_field_tag :password,  nil, placeholder: 'Input Password' %>
	<%= submit_tag 'Sign In' %>
	<% end %>